#!/usr/bin/perl -w

my $target = q{convergence_test};

if ( -d $target ) {
  print STDERR "$0: test vectors already in place\n";
  exit 0;
}

print STDERR "$0: fetching encoder test vectors from GitHub";

system( qq{git clone https://github.com/excamera/convergence-test $target} )
  and die qq{Couldn't clone https://github.com/excamera/convergence-test};
